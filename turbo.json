{
  "$schema": "https://turbo.build/schema.json",
  "globalDotEnv": [".env.local", ".env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "deploy": {
      "dependsOn": ["build"]
    },

    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalDependencies": [".env", ".env.local", "tsconfig.json"]
}
